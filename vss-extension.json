{
	"manifestVersion": 1,
	"id": "vsts-regex-replace",
	"version": "1.0.1",
	"name": "Regex Replace",
	"description": "Replaces content in files by Regular Expression",
	"publisher": "ivanboyko",
	"public": true,
	"targets": [
		{
			"id": "Microsoft.VisualStudio.Services"
			}
		],
	"scope": [
		"vso.build",
		"vso.release"
	],
	"description": "Replaces content in files by Regular Expression",
	"tags": [
		"regex",
		"replace",
		"file",
		"tasks"
	],
	"content": {
